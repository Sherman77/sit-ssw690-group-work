{
  "hosting": {
    "public": "public",
    "rewrites": [{
        "source": "/",
        "destination": "first_page.html"
      },

      {
        "source": "/main",
        "destination": "second_page.html"
      },

      {
        "source": "/app",
        "function": "app"
      }

    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  }
}